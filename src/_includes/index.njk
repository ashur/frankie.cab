	<meta property="twitter:card" content="summary_large_image">
	<meta property="twitter:url" content="{{ site.url }}">
	<meta property="twitter:title" content="{{ site.title }}">
	<meta property="twitter:description" content="{{ site.description }}">
	<meta property="twitter:image" content="http://frankie.cab/images/frankie.cab.png">

	<link rel="prefetch" href="/audio/doorbell.mp3" as="audio">

	{% set css %}
		{% include "css/index.css" %}
	{% endset %}
	<style>{{ css | safe }}</style>
</head>
<body>
	<main>
		<button
			class="[][][ doorbell ]"
		>
			<span class="[][ visually-hidden ][]">Play doorbell sound</span>
			<span role="img" aria-label="bell">ðŸ””</span>
		</button>
	</main>

	<script>
		const audioDoorbell = new Audio( "/audio/doorbell.mp3" );
		const elDoorbell = document.querySelector( ".doorbell" );

		elDoorbell.addEventListener( "click", () =>
		{
			audioDoorbell.currentTime = 0;
			audioDoorbell.play();
			elDoorbell.classList.add( "jingle" );

			setTimeout( () => elDoorbell.classList.remove( "jingle" ), 1000 );
		});
	</script>
</body>
